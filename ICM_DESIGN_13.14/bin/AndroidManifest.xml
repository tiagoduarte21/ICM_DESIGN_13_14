<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.ua.doarmais"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/doarmais_medium_icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity
            android:name="pt.ua.doarmais.Login"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="pt.ua.doarmais.ForgetParsePassword"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="pt.ua.doarmais.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="pt.ua.doarmais.ExActivity"
            android:label="@string/title_activity_ex" >
        </activity>
        <activity
            android:name="pt.ua.doarmais.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="pt.ua.doarmais.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="pt.ua.doarmais.FeedActivity"
            android:label="@string/title_activity_feed" >
        </activity>
        <activity
            android:name="pt.ua.doarmais.SignUp"
            android:label="@string/title_activity_sign_up" >
        </activity>

        <!-- TODO <activity android:name=".ForgetParsePassword" android:screenOrientation="portrait" android:noHistory="true"></activity> -->
        <activity
            android:name="pt.ua.doarmais.WelcomeActivity"
            android:label="@string/title_activity_welcome" >
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="android.intent.action.VIEW" />

                <data android:scheme="pt.ua.doarmais" />
            </intent-filter>
        </activity>
    </application>

</manifest>